<%= form_tag search_path, method: 'get' do%>
<div class="container search col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-6 col-xs-offset-3">
	<p class="booksearch">Book Search</p>
    <%= text_field_tag :search, params[:search], placeholder:"Search", class:"searchbox col-md-12 col-sm-12 col-xs-12" %><br><br>
	<%= submit_tag "Search", class:"btn btn-danger button btn-responsive col-md-offset-5 col-sm-offset-5" %>
</div>
<% end %>
