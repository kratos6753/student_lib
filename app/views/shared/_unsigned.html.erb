<div class="col-md-3 col-md-offset-4 col-sm-3 col-sm-offset-5 col-xs-3 col-xs-offset-5 col-lg-3 col-lg-offset-5 sform">
    <%= form_for(:session, url: sessions_path, method: 'post' , :html => { :class => "form-horizontal"}) do |f| %>

      <%= f.text_field :roll, class:"form-control", placeholder:"Username" %>

      <%= f.password_field :password, class:"form-control", placeholder:"Password" %>
      <%= f.submit "Sign in", class: "button1 btn btn-large btn-primary btn-block" %>
    <% end %>
</div>
