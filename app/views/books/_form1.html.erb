<%= form_for(@book,method:'post',:html => { :class => "form-horizontal", :role => "form"}) do |f| %>
  <% if @book.errors.any? %>
    <% @book.errors.full_messages.each do |msg| %>
      <div class="alert alert-danger"><%= msg %></div>
    <% end %>
  <% end %>
  <div class="form-group">
    <%= f.label :isbn, class:"col-md-2 control-label" %>
    <div class="col-md-10">
      <%= f.text_field :isbn, class:"form-control", placeholder:"ISBN number" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cover, class:"col-md-2 control-label" %>
    <div class="col-md-10">
      <%= f.text_field :cover, class:"form-control", placeholder:"Cover Page" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :title, class:"col-md-2 control-label" %>
    <div class="col-md-10">
      <%= f.text_field :title, class:"form-control", placeholder:"Book Title" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class:"col-md-2 control-label" %>
    <div class="col-md-10">
      <%= f.text_area :description, class:"form-control", placeholder:"Book Description" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :author, class:"col-md-2 control-label" %>
    <div class="col-md-10">
      <%= f.text_field :author, class:"form-control", placeholder:"Book Author(s)" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :pages, class:"col-md-2 control-label" %>
    <div class="col-md-10">
      <%= f.number_field :pages, class:"form-control", placeholder:"Number of Pages" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :genre, class:"col-md-2 control-label" %>
    <div class="col-md-10">
      <%= f.text_field :genre, class:"form-control", placeholder:"Genre" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= f.submit "Submit", class:"btn btn-primary" %>
    </div>
  </div>
<% end %>
